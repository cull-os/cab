# Basic expressions
# Numbers
42
3.14
# Strings
"hello"
# Paths
./foo/bar
# Lists
(1; 2; 3)
# Records
{a := 1, b := 2}

# String interpolation
"Hello, \(name)!"

# Path interpolation
./foo\(bar)baz

# If expressions
(if x > 0 then "positive" else "non-positive")

# If-is expressions (pattern matching)
(if x is 0 => "zero"
    _ => "non-zero")

# Function application
map(f (1; 2; 3))

# Lambda expressions
(x => x + 1)

# Path manipulation
./foo/bar ++ ./baz
